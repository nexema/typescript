{
  "name": "nexema-generator",
  "version": "1.0.0",
  "description": "Nexema TypeScript/JavaScript code generator",
  "main": "./dist/index.js",
  "bin": {
    "nexemajsgen": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "npm run lint && tsc -p .",
    "local": "sudo npm i -g && nexemajsgen",
    "test": "jest --coverage=false && cd example && npx ts-node test/index.ts",
    "test:coverage": "jest --coverage --colors"
  },
  "keywords": [
    "nexema",
    "binary",
    "serialization",
    "serialize",
    "deserialization",
    "encoding",
    "decoding",
    "code",
    "generator"
  ],
  "author": "Tom√°s Weigenast",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/nexema/typescript/issues"
  },
  "homepage": "https://github.com/nexema/typescript#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.21",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "prettier": "^2.8.4"
  }
}
