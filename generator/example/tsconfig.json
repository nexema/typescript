{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationMap": false,
    "sourceMap": false,
    "lib": ["ES2022"]
  },
  "include": [
    "src/**/*",
  ]
}
